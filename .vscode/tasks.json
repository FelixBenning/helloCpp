{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			// name and description
			"label": "Build helloWorld",
			"detail": "compiler: /usr/bin/g++",
			// command
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${workspaceFolder}/bin/helloWorld",
				"-Wall", "-Wextra", "-Wpedantic"
			],
			// configure working directory, shell, etc.
			"options": {
				"cwd": "${workspaceFolder}"
			},
			// problem matcher uses regex to parse warnings into problems
			// see https://code.visualstudio.com/docs/editor/tasks#_defining-a-problem-matcher
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}